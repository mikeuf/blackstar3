* {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
}


body {
  color: #555555;
  background-color: #FAFAFA;
  /*background-color: #4682B4; */
}

h1, h2, h3, h4, h5, h6 {
  padding: 1rem 6% 0 6%;
}

p {
  padding: 1rem 6% 0 6%;

}

#logo {
  padding: 0 0 0 6%;

}

p:before {
  content: "";
  width: 15rem;
  display: block;
  overflow: hidden;
}

textarea, input, select, label, button {
  font-family: inherit;
  font-size: inherit;
}

textarea, input {
  max-width: 100%;
}

h1 {
  font-family: "Lato";
  font-weight: 700;
  font-size: 2rem;
}

h2 {
  font-family: "Lato";
  font-weight: 700;
  font-size: 1.25rem;
}


h3 {
  font-family: "Lato";
  font-weight: 700;
  font-size: 1.25rem;
}

h4 {
  font-family: "Lato";
  font-weight: 700;
  font-size: 1.5rem;
}

h5 {
  font-family: "Lato";
  font-weight: 500;
  font-size: 1.25rem;
}

img {
  max-width: 100%;
}

a {
  text-decoration: none;
  color: #555555;
  font-weight: 500;
  color: #4787D0;
  font-weight: bold;
}

.btn {
  color: #ffffff;
  background: #4787D0;
  padding: 10px 20px 10px 20px;
  text-decoration: none;
  border: 0;
}

.btn:hover {
  background: #71B3FF;
  text-decoration: none;
  border: 0;
}

div.column-block {
}

.header-wrapper {
  background-color: #fafafa;
  border-bottom: 1px solid #DDD;
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
}   

.header {
  max-width: 960px;
  margin: 0 auto;
  padding: 0.25rem 6% 0 6%;
}   

.header a { 
  text-decoration: none;
  font-weight: 500;
  color: #555555;
  float: none;
}   

.logo {
  float: left;
  display: inline;
  padding: 0;
}
.fa.fa-bars {
  font-size: 2rem;
}
#header-nav-menu {
  display: none;
}
.header ul {
  list-style-type: none;
  padding: 0 2rem 0 0;
  font-size: 1rem;
  font-family: 'Lato';
  clear: both;
}   
.header ul li {
  text-align: center; 
  clear: both;
}
.header ul li:hover {
  text-decoration: underline;
}
.header i {
  padding: 0 0.25rem 0 0;
}
.btn-break {
  padding: 0;
  line-height: 0;
}



@media screen and (min-width: 600px) {
  body {
    background-color: lightgreen;
  #hamburger {
    display: inline; 
  }
}

@media screen and (min-width: 1000px) {
  body {
    #hamburger {
      display: block; 
    background-color: lavender;
  }
}

