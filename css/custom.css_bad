.social-media-button {
  text-decoration: none;
  color: #555555;

}

.main-outer {
  max-width: 960px;
  height: 100%;
  margin: 0 auto;
  background-color: #FAFAFA;
  font-family: 'Lato';
  font-weight: 400;
  color: #555555;
  line-height: 1.5rem;
}

.main-inner {
  max-width: 960px;
  margin: 5em auto;
}

.post-body {
  font-family: 'Lora';
  text-align: justify;
}

.post-body a {
  text-decoration: underline;
}

.post-figure {
  font-weight: bold;
  text-align: center;
  padding: 2rem 2rem 2rem 6%;
}


.welcome-headline {
  font-family: "Lato";
  font-weight: 900;
  font-size: 3.5rem;
  margin: 20% auto 0 auto;
  text-align: center;
  max-width: 800px;
  padding: 0 0 1rem 0;
}


.welcome-deck {
  margin-right: auto;
  margin-left: auto;
  text-align: center;
  max-width: 600px;
  padding: 0 0 1rem 0;
}

.post-centered {
  margin-right: auto;
  margin-left: auto;
  text-align: center;
}


.resume-button {
  margin: 0 auto;
  text-align: center;

}


.resume-wrapper {
  background-color: #FFFFFF;
  border: 1px solid #ddd;
  font-family: 'Lora';
}

.resume-wrapper ul {
  padding: 0 0 0 6%;
}


.resume-wrapper h3 {
  font-family: 'Lato';
  font-size: 2.5rem;
  font-weight: 700;
  color: #4787D0;

}

#resume-contact {
  color: #4787D0;
  font-size: 1rem;
  font-family: 'Lato';
  font-weight: 300;
  padding: 1rem 0 0 6%;
}

.resume-wrapper h4 {
  font-family: 'Lato';
  font-size: 1.5rem;
  font-weight: 700;
  color: #4787D0;
}

.resume-deck {
  font-family: 'Lato';
  font-size: 1rem;
  color: #4787D0;

}

.resume-header {
}

.resume-body {
  column-width: 300px;
  column-gap: 8ch;
  column-count: 2;
  padding: 0 3% 0 3%;
}

.resume-body ul li {
  padding: 0.5rem 0 0.5rem 0;
}

.resume-skills {
  text-align: justify;
  text-justify: distribute;
}

.resume-button-wrapper {
  text-align: right;
  width: 100%;

}

.form-contact {
  font-size: 1rem;
  padding: 0 6% 0 6%;
}

.left {
  float: left;
}

.right {
  float: right;
}

